<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/blue_primary</item>
        <item name="colorPrimaryDark">@color/blue_dark</item>
        <item name="colorAccent">@color/amber_primary</item>
        <item name="windowActionBar">false</item>
    </style>

    <style name="edit_text_title">
        <item name="android:textSize">12sp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:textColor">@color/grey_dark</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:visibility">invisible</item>
    </style>

    <style name="edit_text">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:textColor">@color/secondaryText</item>
        <item name="android:background">@drawable/background_grey_rounded</item>
        <item name="android:textColorHint">@color/grey_dark</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="divider">
        <item name="android:layout_height">2dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:background">@color/blue_light</item>
    </style>

    <style name="profile_item">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/secondaryText</item>
        <item name="android:textSize">14sp</item>
    </style>
    <style name="calendar_month_header_item">
        <item name="android:textColor">@color/secondaryText</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>


</resources>
